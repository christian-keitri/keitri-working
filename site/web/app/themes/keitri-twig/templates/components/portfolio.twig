            </a>
          </div>

          <!-- Image -->
          <div class="w-full">
            <img src="{{ theme.link }}/assets/{{ project.image }}" alt="{{ project.title }}" class="w-full max-w-md mx-auto rounded-md">
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Button -->
    <div class="text-center mt-16">
      <a href="/portfolio" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-3 px-6 rounded">
        Read More
      </a>
    </div>
  </div>
</section>
