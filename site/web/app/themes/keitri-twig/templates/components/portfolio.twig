{% set projects = [
  {
    category: 'Web Development',
    title: 'POS',
    description: 'A modern, cloud-based Point of Sale system built to streamline retail and restaurant operations. Supports real-time inventory management, dynamic product cataloging, sales tracking, receipt generation, and secure multi-user access.',
    image: 'pos.png',
    url: '#'
  },
  {
    category: 'App Development',
    title: 'Finance Tracker',
    description: 'A smart financial tracking app with dashboards, customizable budgeting tools, and real-time analytics. Designed for both personal and small business use.',
    image: 'finance-tracker.png',
    url: '#'
  },
  {
    category: 'Web Development',
    title: 'Delivery App',
    description: 'A real-time delivery management system with optimized routes, driver/admin dashboards, and customer notifications for transparent logistics.',
    image: 'delivery-app.png',
    url: '#'
  },
  {
    category: 'Web Development',
    title: 'Habit Tracker',
    description: 'A clean and simple habit-building app that helps users form consistent routines for productivity, health, or personal development.',
    image: 'habit-tracker.png',
    url: '#'
  }
] %}

<section class="w-full bg-white text-black dark:bg-black dark:text-white py-16 px-4 sm:px-6 md:px-10 transition-colors duration-500">
  <div class="max-w-6xl mx-auto">

    <!-- Section Heading -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold leading-snug">
        Dive into our latest <span class="text-yellow-400 dark:text-yellow-500">portfolio</span> updates
      </h2>
      <p class="mt-3 text-sm sm:text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        From apps to systems, explore featured case studies we've built across industries.
      </p>
    </div>

    <!-- Projects -->
    <div class="flex flex-col gap-20">
      {% for project in projects %}
        <div class="flex flex-col {{ loop.index is even ? 'md:flex-row-reverse' : 'md:flex-row' }} items-center gap-10">

          <!-- Image -->
          <div class="w-full md:w-1/2">
            <img src="{{ theme.link }}/assets/{{ project.image }}"
                 alt="{{ project.title }}"
                 class="w-full rounded-xl shadow-md hover:scale-[1.02] transition-transform duration-300">
          </div>

          <!-- Content -->
          <div class="w-full md:w-1/2">
            <span class="inline-block bg-yellow-400 text-black text-xs font-semibold px-3 py-1 rounded-full mb-3 dark:bg-yellow-500 dark:text-black">
              {{ project.category }}
            </span>
            <h3 class="text-xl sm:text-2xl font-semibold mb-2">{{ project.title }}</h3>
            <p class="text-sm sm:text-base text-gray-700 dark:text-gray-300 mb-4">
              {{ project.description }}
            </p>
            <a href="{{ project.url }}"
               class="inline-block bg-cyan-500 hover:bg-yellow-400 dark:bg-amber-400 dark:hover:bg-cyan-500 text-black font-semibold text-sm px-5 py-2 rounded-3xl transition">
              View case study â†’
            </a>
          </div>

        </div>
      {% endfor %}
    </div>

    <!-- CTA Button -->
    <div class="text-center mt-16">
      <a href="/portfolio"
         class="inline-block bg-amber-400 hover:bg-cyan-500 dark:bg-cyan-500 dark:hover:bg-amber-400 text-black font-bold py-3 px-8 rounded-3xl transition">
        Read More
      </a>
    </div>

  </div>
</section>
