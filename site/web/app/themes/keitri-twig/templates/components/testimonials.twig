<section id="testimonials" class="bg-white text-black dark:bg-black dark:text-white py-16 px-4 sm:px-6 lg:px-12 transition-colors duration-500">
  <div class="max-w-7xl mx-auto">
    
    <h2 class="text-3xl sm:text-4xl font-bold text-amber-400 dark:text-yellow-500 text-center mb-12">
      What Our Clients Say
    </h2>

    <!-- Swiper Container -->
    <div class="relative">
      <div class="swiper testimonials-swiper">
        <div class="swiper-wrapper">

          {% set testimonials = [
            {
              name: 'Jane Doe',
              title: 'Project Manager',
              image: 'testimonial1.jpg',
              quote: 'This app changed my life! I’m grateful.'
            },
            {
              name: 'Michael Lee',
              title: 'Startup Founder',
              image: 'testimonial2.jpg',
              quote: 'Incredible support and fast results. I love it'
            },
            {
              name: 'Anna Gomez',
              title: 'Team Lead',
              image: 'testimonial3.jpg',
              quote: 'Very easy to use and boosted our team productivity.'
            },
            {
              name: 'David Kim',
              title: 'CTO, TechCorp',
              image: 'testimonial4.png',
              quote: 'A reliable partner for all our development needs.'
            }
          ] %}

          {% for t in testimonials %}
            <div class="swiper-slide p-6">
              <figure class="bg-transparent dark:bg-transparent rounded-xl shadow-md p-6 text-center flex flex-col items-center gap-4 h-full transition-colors duration-500">
                <img src="{{ theme.link }}/assets/{{ t.image }}" alt="{{ t.name }}" class="w-20 h-20 rounded-full object-cover shadow" loading="lazy">
                <blockquote class="italic text-gray-800 dark:text-gray-100 text-lg sm:text-xl">“{{ t.quote|striptags }}”</blockquote>
                <figcaption class="mt-2 text-black dark:text-white font-semibold">{{ t.name }}</figcaption>
                <p class="text-sm text-gray-600 dark:text-gray-400">{{ t.title }}</p>
              </figure>
            </div>
          {% endfor %}

        </div>

        <!-- Navigation Arrows -->
        <div class="hidden sm:block">
          <button class="testimonials-prev absolute -left-6 top-1/2 -translate-y-1/2 text-cyan-500 hover:text-amber-400 z-10 dark:text-blue-500 dark:hover:text-yellow-400">
            <i class="fas fa-chevron-left text-2xl"></i>
          </button>
          <button class="testimonials-next absolute -right-6 top-1/2 -translate-y-1/2 text-cyan-500 hover:text-amber-400 z-10 dark:text-blue-500 dark:hover:text-yellow-400">
            <i class="fas fa-chevron-right text-2xl"></i>
          </button>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="mt-12 text-center">
        <a href="{{ site.url }}/get-started"
           class="inline-block bg-cyan-400 hover:bg-amber-400 text-black dark:bg-yellow-400 dark:hover:bg-cyan-400 dark:text-black font-bold py-3 px-6 rounded-3xl transition">
          GET STARTED WITH US
        </a>
      </div>
    </div>
  </div>
</section>

{% block footer_scripts %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.testimonials-swiper', {
      loop: true,
      spaceBetween: 24,
      navigation: {
        nextEl: '.testimonials-next',
        prevEl: '.testimonials-prev',
      },
      breakpoints: {
        320: { slidesPerView: 1 },
        640: { slidesPerView: 1 },
        768: { slidesPerView: 2 },
        1024: { slidesPerView: 3 },
      },
    });
  });
</script>
{% endblock %}
