{% set services = {
   title: "Services We Offer",
   subtitle: "We want what you want.",
   subtitle1: "We provide quality service, give regular updates on progress, and make early adjustments.",
   list: [
      { name: "Mobile App Development", description: "Designing and building intuitive mobile applications for seamless user experience.", image: "service1.png" },
      { name: "Software Development", description: "Creating efficient, scalable, and secure software solutions.", image: "service2.png" },
      { name: "Security System", description: "Implementing reliable security solutions for data protection and threat prevention.", image: "service3.png" },
      { name: "Custom Software Solutions", description: "Developing specialized applications to optimize workflows and enhance efficiency.", image: "service4.png" }
   ],
   experience: "10+",
   projects: "500+"
} %}

<!-- Services Section -->
<section id="services" class="bg-gradient-to-br from-stone-900 via-stone-800 to-stone-900 text-white py-24 px-6 relative overflow-hidden">
  
  <!-- Decorative Background -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <img src="{{ theme.link }}/assets/dots.svg" alt="background dots" class="w-full h-full object-cover">
  </div>

  <div class="max-w-7xl mx-auto relative z-10 space-y-20">
    
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight mb-4 tracking-tight">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-cyan-400">
          {{ services.title }}
        </span>
      </h2>
      <p class="text-lg text-cyan-400">{{ services.subtitle }}</p>
      <p class="text-base text-white/70 mt-2">{{ services.subtitle1 }}</p>
    </div>

    <!-- Grid Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Swiper Carousel -->
      <div class="w-full max-w-md mx-auto">
        <div class="swiper services-swiper h-[520px]">
          <div class="swiper-wrapper">
            {% for service in services.list %}
              <div class="swiper-slide">
                <div class="bg-white/5 border border-white/10 p-6 rounded-2xl shadow-xl hover:shadow-cyan-500/20 transition-transform hover:-translate-y-1">
                  <div class="hexagon-container mx-auto mb-6 shadow-inner">
                    <img src="{{ theme.link }}/assets/{{ service.image }}" alt="{{ service.name }} image">
                  </div>
                  <h3 class="text-xl font-semibold text-center text-amber-400 mb-2">{{ service.name }}</h3>
                  <p class="text-sm text-white/80 text-center leading-relaxed">{{ service.description }}</p>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination mt-6 text-white/40"></div>
        </div>
      </div>

      <!-- Image + Stats -->
      <div class="relative w-full rounded-2xl overflow-hidden shadow-lg">
        <img src="{{ theme.link }}/assets/pic.jpg" alt="Team at work" class="w-full h-[520px] object-cover rounded-2xl">

        <!-- Floating Stats Card -->
        <div class="absolute bottom-6 right-6 bg-cyan-500/90 text-white px-6 py-4 rounded-xl shadow-lg backdrop-blur-md">
          <div class="flex gap-8 sm:gap-12 items-center">
            <div class="text-center">
              <h3 class="text-3xl font-bold text-amber-300">{{ services.experience }}</h3>
              <p class="text-sm">Years of Experience</p>
            </div>
            <div class="text-center">
              <h3 class="text-3xl font-bold text-amber-300">{{ services.projects }}</h3>
              <p class="text-sm">Projects Delivered</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Hexagon Style -->
<style>
.hexagon-container {
  width: 180px;
  height: 180px;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  overflow: hidden;
  background: linear-gradient(to bottom right, #fbbf24, #06b6d4);
  padding: 4px;
  border-radius: 16px;
}
.hexagon-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
</style>
