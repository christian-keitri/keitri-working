<section class="bg-stone-800 text-white py-12 px-6 md:px-16">
  <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-12 items-start">

    <!-- Left Side: Heading, Image, and Contact Info -->
    <div>
      <!-- Heading above the image -->
      <h2 class="text-2xl font-semibold mb-4">
        {# Let‚Äôs get in <span class="text-yellow-400">touch</span> #}
							 Let‚Äôs get in <span class="text-cyan-400">touch</span>
      </h2>

      <!-- Image -->
      <div class="mb-6 h-[300px] md:h-[400px] lg:h-[300px] w-[300px] overflow-hidden rounded-md">
        <img src="{{ theme.link }}/assets/contact-handshake.png"
             alt="Contact"
             class="w-full h-full object-cover object-center rounded-md">
      </div>

      <!-- Contact Info -->
      <div class="flex items-center space-x-4 mb-4">
        {# <span class="text-xl">üìû</span> #}
								<span class="text-xl fill: var(--color-cyan-600)">üìû</span>
        <div>
          <p class="text-sm text-gray-400">We're available weekdays from 9AM to 5PM</p>
          {# <p class="text-yellow-400 font-semibold">+359123456341</p> #}
          <p class="text-cyan-400 font-semibold">+359123456341</p>										
        </div>
      </div>

      <div class="flex items-center space-x-4">
        {# <span class="text-xl">‚úâÔ∏è</span> #}
        <span class="text-xl fill: var(--color-cyan-600)">‚úâÔ∏è</span>								
        <div>
          <p class="text-sm text-gray-400">We usually email you back within an hour</p>
          {# <p><a href="mailto:info@keitri.com" class="text-yellow-400 font-semibold hover:underline">info@keitri.com</a></p> #}
          <p><a href="mailto:info@keitri.com" class="text-cyan-400 font-semibold hover:underline">info@keitri.com</a></p>										
        </div>
      </div>
    </div>

    <!-- Right Side: Form -->
    <div>
      <h2 class="text-2xl font-semibold mb-2">
        {# Fill out the form below to <span class="text-yellow-400">get started</span> #}
        Fill out the form below to <span class="text-cyan-400">get started</span>								
      </h2>
      <p class="text-sm text-gray-400 mb-6">
        Let us know about your project and we will get back to you with our proposal and timeline.
      </p>

      <form method="POST" action="/contact">
        <div class="space-y-4">
          <input type="text" name="name" placeholder="Name" required class="w-full px-4 py-2 rounded bg-[#1E1E1E] border border-gray-600 focus:outline-none">
          <input type="email" name="email" placeholder="Email" required class="w-full px-4 py-2 rounded bg-[#1E1E1E] border border-gray-600 focus:outline-none">
          <input type="text" name="phone" placeholder="Phone (Optional)" class="w-full px-4 py-2 rounded bg-[#1E1E1E] border border-gray-600 focus:outline-none">
          <textarea name="message" rows="5" maxlength="500" placeholder="How can we help you?" class="w-full px-4 py-2 rounded bg-[#1E1E1E] border border-gray-600 focus:outline-none"></textarea>

          <p class="text-sm font-medium text-white">Expected Services</p>
          <div class="grid grid-cols-2 gap-4">
            <label class="flex items-center space-x-2">
              <input type="radio" name="service" value="Web Design" class="accent-yellow-400">
              <span>Web Design and Development</span>
            </label>
            <label class="flex items-center space-x-2">
              <input type="radio" name="service" value="Mobile App" class="accent-yellow-400">
              <span>Mobile App Development</span>
            </label>
            <label class="flex items-center space-x-2">
              <input type="radio" name="service" value="Software" class="accent-yellow-400">
              <span>Custom Software</span>
            </label>
            <label class="flex items-center space-x-2">
              <input type="radio" name="service" value="Other" class="accent-yellow-400">
              <span>Other</span>
            </label>
          </div>

          {# <button type="submit" class="bg-yellow-400 hover:bg-yellow-500 text-black font-semibold px-6 py-2 rounded shadow mt-4"> #}
          {# <button type="submit" class="bg-yellow-400 hover:bg-cyan-500 text-black font-semibold px-6 py-2 rounded shadow mt-4"> #}
										<button type="submit" class="bg-cyan-400 hover:bg-cyan-500 text-black font-semibold px-6 py-2 rounded shadow mt-4">														
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
