{% set is_available = true %}

{% if is_available %}
  {% set badge_dot = 'bg-amber-400' %}
  {% set cta_col   = 'bg-cyan-400 hover:bg-amber-200 text-black' %}
  {% set badge_txt = 'AVAILABLE FOR NEW PROJECTS' %}
{% else %}
  {% set badge_dot = 'bg-red-500' %}
  {% set cta_col   = 'bg-red-500 hover:bg-red-400 text-white' %}
  {% set badge_txt = 'CURRENTLY BOOKED' %}
{% endif %}

<section class="relative bg-stone-800">
  <div class="container mx-auto grid md:grid-cols-2 items-center gap-10 px-4 md:px-8 py-10">

    <!-- Left Column -->
    <div class="space-y-8">
      <span class="inline-flex items-center gap-2 rounded-full bg-cyan-400/70 px-3 py-1 text-sm font-semibold text-white -mt-20">
        <span class="{{ badge_dot }} h-3.5 w-3.5 rounded-full"></span>
        {{ badge_txt }}
      </span>

      <h1 class="text-4xl leading-tight md:text-4xl font-extrabold text-white max-w-lg">
        Software Technology <span class="block font-semibold text-amber-400">Solutions</span>
      </h1>

      <p class="text-lg leading-relaxed text-white/90 max-w-lg">
        We help you build and develop websites, web apps, mobile apps, custom software solutions, and more.
      </p>

      <div class="relative max-w-md group">
        <p class="font-medium italic text-white/80">You’re in good company. We provide reliable services.</p>
        <span class="block h-1 ml-40 mt-4 w-[300px] animate-slide-and-color"></span>
      </div>

      <div class="grid grid-cols-3 gap-4 text-left text-white/90">
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">500+</span>
          <span class="text-xs uppercase tracking-wide">Projects Delivered</span>
        </div>
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">99%</span>
          <span class="text-xs uppercase tracking-wide">Client Satisfaction</span>
        </div>
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">24/7</span>
          <span class="text-xs uppercase tracking-wide">Support Available</span>
        </div>
      </div>

      <a href="#contact" class="inline-flex items-left gap-2 rounded-3xl px-7 py-2 font-semibold active:scale-95 transition-colors {{ cta_col }}">
        Let’s Talk
      </a>
    </div>

    <!-- Right Column: Static Images Only -->
    <div class="flex flex-col gap-6 items-center">
      {% set base_path = theme.link ~ '/assets/' %}
      <img src="{{ base_path ~ 'hero.png' }}" alt="Artificial Intelligence" class="w-[300px] h-[300px]">
      
      
    </div>

  </div>
</section>
