{# ────────────────────────────────────────────────────────────────
   HERO  –  availability badge, stats, CTA, floating service cards
   Toggle `is_available` in PHP or here for demo.
   ──────────────────────────────────────────────────────────────── #}

{% set is_available = true %}

{% if is_available %}
  {% set badge_dot = 'bg-amber-400' %}
  {% set cta_col   = 'bg-amber-300 hover:bg-amber-200 text-black' %}
  {% set badge_txt = 'AVAILABLE FOR NEW PROJECTS' %}
{% else %}
  {% set badge_dot = 'bg-red-500' %}
  {% set cta_col   = 'bg-red-500 hover:bg-red-400 text-white' %}
  {% set badge_txt = 'CURRENTLY BOOKED' %}
{% endif %}

<section class="relative bg-stone-800">
  <div class="container mx-auto grid md:grid-cols-2 items-center
              gap-10 md:gap-16 px-4 md:px-8 py-20 min-h-[80vh]">

    <!-- ◂ Copy column ------------------------------------------------ -->
    <div class="space-y-8">

      <span class="inline-flex items-center gap-2 rounded-full
                   bg-cyan-400/70 px-3 py-1 text-sm font-semibold text-white">
        <span class="{{ badge_dot }} h-3.5 w-3.5 rounded-full"></span>
        {{ badge_txt }}
      </span>

      <h1 class="text-4xl leading-tight md:text-6xl md:leading-[1.1]
                 font-extrabold text-white max-w-lg">
        Software Technology Solutions
      </h1>

      <p class="text-lg leading-relaxed text-white/90 max-w-lg">
        We help you build and develop websites, web apps, mobile apps,
        custom software solutions, and more.
      </p>

      <p class="font-medium italic text-white/80 max-w-md">
        You’re in good company. We provide reliable services.
      </p>

      <!-- stats row -->
      <div class="grid grid-cols-3 gap-4 text-center text-white/90">
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">500+</span>
          <span class="text-xs uppercase tracking-wide">Projects Delivered</span>
        </div>
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">99%</span>
          <span class="text-xs uppercase tracking-wide">Client Satisfaction</span>
        </div>
        <div>
          <span class="block text-3xl font-extrabold text-amber-400">24/7</span>
          <span class="text-xs uppercase tracking-wide">Support Available</span>
        </div>
      </div>

      <!-- CTA -->
      <a href="#contact"
         class="inline-flex items-center gap-2 rounded-3xl px-7 py-3 font-semibold
                active:scale-95 transition-colors {{ cta_col }}">
        Let’s Talk
      </a>
    </div>

    <!-- ▸ Floating cards column ------------------------------------- -->
    <div class="relative flex justify-center">
     {% set base_path = theme.link ~ '/assets/' %}
{% set cards = [
  {
    title : 'Artificial Intelligence',
    src   : base_path ~ 'ai.png',
    y     : 0
  },
  {
    title : 'Machine Learning',
    src   : base_path ~ 'ml.png',
    y     : 8
  },
  {
    title : 'Cloud Solutions',
    src   : base_path ~ 'cloud.png',
    y     : 16,
    cta   : true
  }
] %}

<div class="relative flex justify-center">
  <div class="space-y-8">
    {% for c in cards %}
      <div class="w-64 rounded-xl bg-stone-700/60 backdrop-blur
                  p-6 text-white/90 shadow-lg shadow-black/30
                  hover:shadow-cyan-500/30 transition
                  translate-y-{{ c.y }}">
        <img src="{{ c.src }}"
             alt="{{ c.title }}"
             class="h-40 w-60 mb-4 object-contain" loading="lazy">

        <h3 class="font-semibold">{{ c.title }}</h3>

        {% if c.cta %}
          <a href="#"
             class="mt-3 inline-block text-cyan-400 text-sm hover:underline">
            Explore more →
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

  </div>
</section>
