{% set is_available = true %}

{% if is_available %}
  {# {% set badge_dot = 'bg-amber-400' %} #}
  {% set badge_dot = 'bg-white' %}		
  {# {% set cta_col   = 'bg-cyan-400 hover:bg-amber-300 text-black' %} #}
		{% set cta_col   = 'bg-cyan-400 text-black' %}
  {% set badge_txt = 'AVAILABLE FOR NEW PROJECTS' %}
{% else %}
  {% set badge_dot = 'bg-red-500' %}
  {% set cta_col   = 'bg-red-500 hover:bg-red-400 text-white' %}
  {% set badge_txt = 'CURRENTLY BOOKED' %}
{% endif %}

<section class="relative bg-stone-800 text-white overflow-hidden">
  <div class="container mx-auto grid md:grid-cols-2 items-center gap-16 px-6 md:px-12 py-20">

    <!-- Left Column -->
    <div class="space-y-10">

      <!-- Status Badge & Portfolio CTA -->
      <div class="flex items-center gap-4 flex-wrap">
        {# <span class="inline-flex items-center gap-2 rounded-full bg-cyan-500/10 px-4 py-1 text-sm font-semibold text-white/90 animate-fade-in"> #}
								<span class="inline-flex items-center gap-2 rounded-full bg-cyan-400/50 px-4 py-1 text-sm font-semibold text-white/90 animate-fade-in">
          <span class="{{ badge_dot }} h-3.5 w-3.5 rounded-full animate-ping"></span>
          {{ badge_txt }}
        </span>

      
      </div class="w-full h-full object-contain">

      <!-- Headline -->
      <h1 class="text-4xl md:text-5xl font-extrabold leading-tight tracking-tight animate-fade-in-up">
        Empowering<span class=""><br />Digital Vision</span> 
        <br />Keitri <span class="text-cyan-400">Software Solutions</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-white/90 max-w-xl leading-relaxed animate-fade-in-up delay-75">
        We craft intuitive websites, mobile apps, and powerful platforms to help businesses innovate and scale with confidence.
      </p>

      <!-- Trust Line -->
      <div class="relative max-w-md animate-fade-in-up delay-100">
        <p class="italic font-medium text-white/70">You're in good company — we deliver what we promise.</p>
								{# <span class="block h-1 w-[260px] ml-40 mt-4 bg-gradient-to-r from-cyan-400 to-white-400 rounded-full animate-slide-and-color"></span> #}
        <span class="block h-1 w-[260px] ml-40 mt-4 bg-gradient-to-r from-cyan-400 to-white-400 rounded-full animate-slide-and-color"></span>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-3 gap-6 text-white/90 text-left animate-fade-in-up delay-150">
        {% set stats = [
          {'value': '500+', 'label': 'Projects Delivered'},
          {'value': '99%', 'label': 'Client Satisfaction'},
          {'value': '24/7', 'label': 'Support Available'}
        ] %}
        {% for stat in stats %}
          <div x-data="{ count: 0 }" x-init="count = '{{ stat.value }}'" class="transition transform hover:scale-105">
											 {#<span class="block text-3xl md:text-4xl font-bold text-amber-400" x-text="count"></span>#}
            <span class="block text-3xl md:text-4xl font-bold text-cyan-400" x-text="count"></span>
            <span class="text-xs uppercase tracking-wide">{{ stat.label }}</span>
          </div>
        {% endfor %}
      </div>

      <!-- Main CTA -->
      <div class="flex items-center gap-4 mt-4 animate-fade-in-up delay-200">
        {# <a href="#contact" class="inline-flex items-center gap-2 rounded-full px-6 py-3 text-base font-semibold shadow-lg transition-transform transform hover:scale-105 {{ cta_col }}"> #}
								<a href="#contact" class="inline-flex items-center gap-2 rounded-full px-6 py-3 text-base text-white font-semibold shadow-lg transition-transform transform hover:scale-105  hover:bg-cyan-600 {{ cta_col }}">
          Let’s Talk
        </a>
      </div>
    </div>

    <!-- Right Column: Hero Image -->
    <div class="relative flex justify-center items-center animate-fade-in-up delay-100">
      <div class="relative w-[340px] sm:w-[420px] md:w-[500px] lg:w-[540px] aspect-square">
        <img src="{{ theme.link }}/assets/hero.png"
             alt="AI Illustration"
             class="w-full h-full object-contain drop-shadow-2xl animate-float-slow"
             loading="lazy" />
      </div>
    </div>
  </div>
</section>
