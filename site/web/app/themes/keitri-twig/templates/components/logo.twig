 <div class="w-full bg-stone-800 text-white">
  
  <div class="container mx-auto px-4 pt-12 pb-12">
    <h2 class="text-2xl md:text-3xl font-bold text-white text-center">
      Game changers we've <span class=text-amber-400>collaborated</span> with: 
    </h2>
  </div>



  <div class="w-full h-px bg-gray-200"></div>


  <div class="overflow-hidden whitespace-nowrap py-12">
    <div class="marquee-track flex animate-marquee">
      {% set logos = [
        'logo1.jpg',
        'logo2.jpg',
        'logo3.jpg',
        'logo4.jpg',
        'logo5.png',
        'logo6.png',
        'logo7.jpg'
      ] %}

      {# Duplicate logos to loop seamlessly #}
      {% for _ in 1..10 %}
        {% for logo in logos %}
          <img
            src="{{ theme.link }}/assets/logo/{{ logo }}"
            alt="{{ logo|replace({'.jpg':'', '.png':''}) }}"
            class="h-40 w-40 inline-block mx-6 rounded-2xl"
          />
        {% endfor %}
      {% endfor %}
    </div>
  </div>


  <div class="w-full h-px bg-gray-200"></div>
</div>
